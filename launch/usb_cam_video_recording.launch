<launch>
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" >
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1280" />
    <param name="image_height" value="720" />
    <param name="pixel_format" value="mjpeg" />
    <param name="camera_frame_id" value="usb_cam" />
    <param name="io_method" value="mmap"/>
  </node>

  <node name="throttle_imgs" pkg="topic_tools" type="throttle" output="screen" args="messages /usb_cam/image_raw 5 image"/>

  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen">
    <!--remap from="image" to="/usb_cam/image_raw"/-->
    <param name="autosize" value="true" />
  </node>

  <node name="rosbag_recording" pkg="rosbag" type="record" output="screen" respawn="true" args="/usb_cam/image_raw"/>

</launch>
